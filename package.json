    "zod": "^3.22.4",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
